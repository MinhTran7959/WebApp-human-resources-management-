@{
    bool isLoggedIn = true;
    if (string.IsNullOrWhiteSpace(User.Identity.Name))
    {
        isLoggedIn = false;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="~/Content/ltweb.css">

    <title>QTL</title>
</head>
<body>


    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-sad'></i>
            <span class="text">Trang Chủ</span>
        </a>
        <ul class="side-menu top">


            <li>
                @Html.ActionLink("Quản Lý Nhân Viên", "Index", "Proc_NhanVien")
            </li>

            <li>
                @Html.ActionLink("Quản Lý Phòng Ban", "Index", "Proc_PhongBan")
            </li>
            <li>
                @Html.ActionLink("Quản Lý Chức Vụ", "Index", "Proc_ChucVu")
            </li>
            <li>
                @Html.ActionLink("Quản Lý Họp Đồng", "Index", "Proc_HopDong")
            </li>
            <li>
                @Html.ActionLink("Quản Lý Khen Thưởng", "Index", "Proc_KhenThuong")
            </li>
            <li>
                @Html.ActionLink("Quản Lý Kỷ Luật", "Index", "Proc_KyLuat")
            </li>
            <li>
                @Html.ActionLink("Quản Lý Lương", "Index", "Proc_Luong")
            </li>

            <li>
                @Html.ActionLink("Quản Lý Tài Khoản(Admin)", "Index", "Proc_TaiKhoan")
            </li>

        </ul>
        <ul class="side-menu">
            @*<li>
                    <a href="#">
                        <i class='bx bxs-cog'></i>
                        <span class="text">Settings</span>
                    </a>
                </li>*@
            @{
                if (isLoggedIn)
                {
                    <li>
                        <a href="#">
                            <i class='bx bxs-cog'></i>
                            <span class="text">User: </span>

                        </a>

                    </li>
                    <li>
                        @Html.ActionLink(User.Identity.Name, "Index", "Proc_NhanVien")
                    </li>

                    <li>
                        <a href="~/Proc_TaiKhoan/Login" class="logout">
                            <i class='bx bxs-log-out-circle'></i>
                            <span class="text">Logout</span>
                        </a>
                    </li>
                }
            }
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">QUẢN LÝ NHÂN SỰ</a>
            @*<form method="post">
                <div class="form-input">
                    <input type="search" name="searchString" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>*@
            @*<input type="checkbox" id="switch-mode" hidden>
                <label for="switch-mode" class="switch-mode"></label>
                <a href="#" class="notification">
                    <i class='bx bxs-bell'></i>
                    <span class="num"></span>
                </a>*@

        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Quá Trình Lương</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Quản Lý Trình Lương</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Home</a>
                        </li>
                    </ul>
                </div>
                <a href="~/Proc_QuaTrinhLuong/ExportData" class="btn-download">
                    <i class='bx bxs-cloud-download'></i>
                    <span class="text">Download Excel</span>
                </a>
            </div>

            <ul class="box-info" style="width:30%;background-color:aqua">
                <li>
                    <i class='bx bxs-calendar-check'></i>

                    <div class="text" style="border-radius:15px;background-color:aquamarine">
                        <p style="font-size:30px;">
                            @Html.ActionLink("Create New", "Create")
                        </p>
                    </div>


                </li>
            </ul>


            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Quá Trình Lương</h3>
                    </div>
                    <table>
                        @*hiển thị thông tin nhân viên*@
                        <tbody>
                            @RenderBody()

                        </tbody>
                    </table>
                </div>
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->


    <script src="~/Scripts/ltweb.js"></script>
</body>
</html>